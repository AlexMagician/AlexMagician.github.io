script(type="text/ng-template", id="dungeon-tab")
  .dungeon-container(fill-height, offset="40")
    .row.margin-bottom-20
      .col-xs-4 [Objective]
      .col-xs-8 {{victory.description}}

    .row.margin-bottom-20
      .col-xs-12 {{world.depth}} floors, each {{world.width}}x{{world.height}} tiles

    .row(ng-repeat="floor in world.tiles", ng-class="{'current-floor': currentFloor === $index}")
      .col-xs-4.floor-number [Floor {{$index+1}}]
      .col-xs-8 {{floor.mapName}}
